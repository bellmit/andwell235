    <table>
        <tableInfo>
            <caption>采购合同明细</caption>
            <tableName>T_HT</tableName>
            <sql>
                select ht.hth htbh,ht.nd htnd,cf.mc gys,tjh.mc qcmc,htqd.jh qcxh,tjldw.mc jldw, mlqd.dj, htqd.sl dhsl,ht.zj dhje
                from T_HT ht
                join T_HT_QD htqd on ht.hth = htqd.hth and ht.jhbh = htqd.jhbh
                join T_JH_JH tjh on htqd.jh = tjh.id
                join t_xt_jldw tjldw on tjldw.id =tjh.dw
                join T_CG_ML_QD mlqd on mlqd.id = htqd.ml_qdid
                join T_CF cf on ht.cjid = cf.id
